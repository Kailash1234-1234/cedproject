<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="brand_table" resource="default" engine="innodb" comment="Brand Table">
        <column xsi:type="int" name="brand_id" padding="10" unsigned="true" nullable="false" identity="true"
                comment="Brand ID"/>
        <column xsi:type="varchar" name="brand_name" padding="5" unsigned="true" nullable="false"
                identity="false" default="0" comment="Brand Name"/>
        <column xsi:type="varchar" name="brand_image" nullable="false"  default="0" comment="Brand Image"/>
        <column xsi:type="varchar" name="brand_desc" nullable="false"  default="0" comment="brand Desc"/>
        <column xsi:type="int" name="brand_status" nullable="true" length="64" comment="brand Status"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Creation Time"/>
        <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Update Time"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="brand_id"/>
        </constraint>
    </table>

     <table name="brand_delete_table" resource="default" engine="innodb" comment="Brand Delete Table">
        <column xsi:type="int" name="brand_delete_id" padding="10" unsigned="true" nullable="false" identity="true"
                comment="Brand Delete ID"/>
        <column xsi:type="varchar" name="brand_name" padding="5" unsigned="true" nullable="false"
                identity="false" default="0" comment="Brand Name"/>
        <column xsi:type="varchar" name="brand_image" nullable="false"  default="0" comment="Brand Image"/>
        <column xsi:type="varchar" name="brand_desc" nullable="false"  default="0" comment="brand Desc"/>
        <column xsi:type="int" name="brand_status" nullable="true" length="64" comment="brand Status"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Creation Time"/>
        <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Update Time"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="brand_delete_id"/>
        </constraint>
    </table>
</schema>