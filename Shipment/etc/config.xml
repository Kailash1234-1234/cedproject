<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <carriers>
            <customshipping>
                <active>0</active>
                <title>Ced Custom Shipping Menthod</title>
                <name>Ced Custom Shipping Method Name</name>
                <shipping_cost>20</shipping_cost>
                <sallowspecific>0</sallowspecific>
                <sort_order>15</sort_order>
                <model>Ced\Shipment\Model\Carrier\Customshipping</model>
            </customshipping>
        </carriers>
         <payment>
            <testpayment>
                <payment_action>capture</payment_action> 
                <model>Ced\Shipment\Model\PaymentMethod</model>
                <active>1</active>
                <title>Test Payment</title>
                <order_status>pending_payment</order_status><!-- set default order status-->
            </testpayment>
        </payment>
    </default>
</config>
